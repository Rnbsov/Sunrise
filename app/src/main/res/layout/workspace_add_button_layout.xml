<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="?attr/addButtonBackground"
        android:contentDescription="@string/create_new_category"
        android:scaleType="center"
        app:shapeAppearanceOverlay="@style/RoundedSquareOverlay"
        app:srcCompat="@drawable/group_add_24px"
        app:tint="?attr/itemAccentColor" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="Create workspace"
        android:textSize="28sp" />

</LinearLayout>