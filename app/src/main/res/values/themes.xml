<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sunrise" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="itemBackgrounds">@color/black</item>

    </style>

    <style name="Theme.Sunrise" parent="Base.Theme.Sunrise" />

    <style name="Theme.Sunrise.Dynamic" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="itemBackgrounds">@color/material_dynamic_secondary10</item>
        <item name="itemAccentColor">@color/material_dynamic_primary70</item>
        <item name="appBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>


    <style name="convexStarImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">98%</item>

    </style><style name="starImageView" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedSquareOverlay">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Sunrise</item>
    </style>

</resources>